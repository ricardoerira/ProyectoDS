@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    if (!string.IsNullOrEmpty(ViewBag.AlertMessage))
    {
        <script>alert("@ViewBag.AlertMessage");</script>

    }

    <div class="container" id="wrap">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <fieldset>

                    <fosrm action="r" method="post" accept-charset="utf-8" class="form" role="form">
                        <legend>Informe inducción</legend>


                        <h4>Seleccione los campos:</h4>
                        <div class="row">

                            <div class="form-group">
                                <h5><label class="col-sm-2 control-label">IPS/ESE</label></h5>
                                <div class="col-xs-6 col-md-6">

                                    @Html.DropDownList("IPS_ESEId", (IEnumerable<SelectListItem>)ViewBag.IPS_ESEId, new { @class = "form-control input-lg" })



                                </div>
                            </div>
                        </div>

                        <br />
                        <label>Seleccione periodo y año:</label>
                        <div class="row">
                            <div class="col-xs-4 col-md-4">
                                <select name="periodoId" id="periodoId" class="form-control input-lg">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    
                                </select>
                            </div>

                            <div class="col-xs-4 col-md-4">
                                <select name="añoId" class="form-control input-lg">
                                    <option value="2015">2015</option>
                                    <option value="2016">2016</option>
                                    <option value="2017">2017</option>


                                </select>
                            </div>
                            <br />
                            <br>
                        </div>

                        <span class="help-block">A través de este formulario podrá visualizar el informe de inducciones. <p>Puede elegir por mes y año o simplemente por año.</p></span>
                        <button class="btn btn-lg btn-primary btn-block signup-btn" type="submit">
                            Ver
                        </button>




                </fieldset>

            </div>




        </div>
    </div>

}





















