                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
</div>

 


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    if (!string.IsNullOrEmpty(ViewBag.AlertMessage))
    {
        <script>alert("@ViewBag.AlertMessage");</script>

    }

    <div class="container" id="wrap">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <fieldset>
                    
                    <fosrm action="r" method="post" accept-charset="utf-8" class="form" role="form">
                        <legend>Carta de presentación</legend>


                        <h4>Seleccione los campos:</h4>
                        <div class="row">

                            <div class="form-group">
                                <h5><label class="col-sm-2 control-label">IPS/ESE</label></h5>
                                <div class="col-xs-6 col-md-6">

                                    @Html.DropDownList("IPS_ESEId", (IEnumerable<SelectListItem>)ViewBag.IPS_ESEId, new { @class = "form-control input-lg" })
                                    </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <h5><label class="col-sm-2 control-label">Programa</label></h5>
                                <div class="col-xs-6 col-md-6">

                                    @Html.DropDownList("programaId", (IEnumerable<SelectListItem>)ViewBag.programaId, new { @class = "form-control input-lg" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <h5><label class="col-sm-2 control-label">Departamento</label></h5>
                                <div class="col-xs-6 col-md-6">

                                    @Html.DropDownList("DepartamentoSaludId", (IEnumerable<SelectListItem>)ViewBag.DepartamentoSaludId, new { @class = "form-control input-lg" })
                                </div>
                            </div>
                        </div>

                        








                        <br />
                        <label>Seleccione Fecha:</label>
                        <div class="row">
                            <div class="col-xs-4 col-md-4">
                                <select name="mesId" id="mesId" class="form-control input-lg">
                                    <option value="01">Enero</option>
                                    <option value="02">Febrero</option>
                                    <option value="03">Marzo</option>
                                    <option value="04">Abril</option>
                                    <option value="05">Mayo</option>
                                    <option value="06">Junio</option>
                                    <option value="07">Julio</option>
                                    <option value="08">Agosto</option>
                                    <option value="09">Septiembre</option>
                                    <option value="10">Octubre</option>
                                    <option value="11">Noviembre</option>
                                    <option value="12">Diciembre</option>
                                </select>
                            </div>

                            <div class="col-xs-4 col-md-4">
                                <select name="añoId" class="form-control input-lg">

                                   
                                    <option value="2005">2005</option>
                                    <option value="2006">2006</option>
                                    <option value="2007">2007</option>
                                    <option value="2008">2008</option>
                                    <option value="2009">2009</option>
                                    <option value="2010">2010</option>
                                    <option value="2011">2011</option>
                                    <option value="2012">2012</option>
                                    <option value="2013">2013</option>
                                    <option value="2014">2014</option>
                                    <option value="2015">2015</option>
                                </select>
                            </div>
                            <br />
                            <br>
                        </div>

                            <span class="help-block">A través de este formulario podrá visualizar las cartas de presentación realizadas a las distintas IPS/ESE de acuerdo a la fecha elegida</span>
                          
                        <button class="btn btn-lg btn-primary btn-block signup-btn" type="submit" formtarget="_blank">Ver</button>

                       


</fieldset>

            </div>




        </div>
    </div>

}





















