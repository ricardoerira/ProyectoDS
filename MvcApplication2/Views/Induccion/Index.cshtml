<div class="ens">
    <p>
        @Html.ActionLink("Crear Nuevo", "Create")
    </p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)




    <div class="ens">
        <p class=" help-block">
            <table></table>  Inducción - Buscar por nombre:
        </p>
    </div>

    <div class="col-md-4">
        @Html.TextBox("SearchString", ViewBag.SearchFilter as string, new { @class = "form-control", onclick = "keystroke()", id = "search" })

    </div>
    <div class="col-md-6">
        <input type="submit" class="btn btn-primary" value="Buscar" />
    </div>

}
<div class="span7">
    <div class="widget stacked widget-table action-table">

        <div class="widget-header">
            <h4><i class="glyphicon-align-center glyphicon glyphicon-list"></i></h4>
            <h3>Tabla de Inducciones</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Frecuencia
                        </th>
                        <th class="text-center">
                            n.º Est.
                            </th>
                        <th>
                        
                            Valor
                        </th>
                        <th class="text-center">
                            Año
                            </th>
                        <th class="text-center">
                            Período
                        </th>
                        <th>
                            Observaciones
                        </th>
                        <th>
                            IPS/ESE
                        </th>
                        <th class="td-actions text-center">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.frecuencia)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.numeroEstudiantes)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.valor)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.año)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.periodo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.observaciones)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IPS_ESE.nombre)
                            </td>
                            
                            <td class="text-center">                                
                                @Html.ActionLink(" ", "Delete", new { id = item.InduccionId }, new { @class = "btn btn-sm btn-danger btn-icon-only glyphicon glyphicon-remove", title = "Eliminar" })
                                @Html.ActionLink(" ", "Edit", new { id = item.InduccionId }, new { @class = "btn btn-sm btn-success btn-icon-only glyphicon glyphicon-pencil", title = "Editar" })





                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div> <!-- /widget-content -->

    </div> <!-- /widget -->
</div>