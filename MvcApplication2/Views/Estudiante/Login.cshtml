@model MvcApplication2.Models.Estudiante

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    if (!string.IsNullOrEmpty(ViewBag.AlertMessage))
    {
        <script>alert("@ViewBag.AlertMessage");</script>

    }
    <div class="container-fluid">

        <div class="container-page">
            <div class=" col-sm-2">
            </div>
            <div class=" col-sm-3">
                <br />
                <br />
                <img src="../../images/user3.jpg" height="300" width="275">

            </div>

            <div class="col-sm-4">
                <br />
                <br />
                <br />

                <h2><p class="help-block">Iniciar sesión</p></h2>
                <br />
                <p>
                    Ingresa a tu hoja de vida y esquema de vacunación.
                </p>
                <br />
                @Html.TextBoxFor(model => model.codigo, new { @class = "form-control", @placeholder = "Usuario" })
                @Html.ValidationMessageFor(model => model.codigo)
                <p class="help-block"></p>
                @Html.PasswordFor(model => model.clave, new { @class = "form-control", @placeholder = "Contraseña" })
                @Html.ValidationMessageFor(model => model.clave)

                <p class="help-block"></p>


                <button type="submit" class="btn btn-primary">Ingresar</button>
                <button type="reset" class="btn btn-default btn-sm">
                    Limpiar
                </button>
            </div>
        </div>

    </div>





    <div class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
            <p class="navbar-text pull-left">
                © 2015 - Facultad de Ciencias para la Salud.
                <a href="http://www.ucaldas.edu.co/portal/" target="_blank">Universidad de Caldas</a>
            </p>

            <a href="" class="navbar-btn  btn pull-right">
                <span></span>  Docencia Servicio
            </a>
        </div>


    </div>


    <div class="form-group">




        <div class="col-sm-4">

            @Html.HiddenFor(model => model.estudianteId)
            @Html.HiddenFor(model => model.hojaVidaId)
            @Html.HiddenFor(model => model.rotacionId)
            @Html.HiddenFor(model => model.programaId)
            @Html.HiddenFor(model => model.clave)
            @Html.HiddenFor(model => model.modalidad)


            @Html.HiddenFor(model => model.semestre)
            @Html.HiddenFor(model => model.estado_academico)


        </div>
    </div>

}
