@using (Html.BeginForm("Personales", "Estudiante", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="row">



            <!-- /.navbar-collapse aca va leyend -->




            <div class="col-sm-5">

                <div class="row">

                    <!-- Text input-->

                    <fosrm class="form-horizontal" role="form">


                        <div class="span7">
                            <div class="widgetVacuna stacked widgetVacuna action-table">

                                <div class="widgetVacuna-headerVacuna">
                                    <h2><i class="glyphicon-align-center glyphicon glyphicon-list"></i></h2>
                                    <h4>Esquema de vacunación</h4>
                                </div> <!-- /widget-header"> -->

                                <div class="widgetVacuna-contentVacuna">


                                    <table class="tableVacuna  table-condensed table-striped table-bordered">

                                        <thead>
                                            <tr>
                                                <th height="40px">Biológico | Dosis</th>
                                                <th>Fecha de Aplicación</th>
                                                <th>Proxima Vacuna</th>
                                                <th>Lote</th>
                                                <th>Lugar Anatómico</th>
                                                <th>Laboratorio</th>
                                                <th>Observaciones</th>


                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (var i = 0; i < Model.HojaVida.Vacunas.Count; i++)
                                            {

                                                <tr>
                                                    
                                                         @if (Model.HojaVida.Vacunas.ElementAt(i).fecha_vacunacion > DateTime.Now.Date.AddMonths(-20))
                                                         {
                                                           
                                                                <th height="35px">@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).nombre_generico)</th>

                                                             

                                                            <td>@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).fecha_vacunacion)</td>
                                                            <td>@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).fecha_prox_vacunacion)</td>
                                                            <td>@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).lote)</td>
                                                            <td>@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).lugar_anatomico)</td>
                                                            <td>@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).laboratorio_vacunacion)</td>
                                                            <td>@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).observaciones)</td>

                                                         }
                                                         else
                                                         {
                                                             if (Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("Hepatitis B Dosis 1") || Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("Triple Viral Dosis 1") || Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("Varicela Dosis 1") || Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("Toxoide Tetánico Dosis 1")
                                                                 || Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("Fiebre Amarilla Dosis 1") || Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("Influenza Dosis 1") || Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("DTP Acelular Dosis 1"))
                                                             {
                                                                <th height="35px" style="color: red">@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).nombre_generico)</th>

                                                             }
                                                             else
                                                             {
                                                                 if (Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("Hepatitis B Dosis 2") && (Model.HojaVida.Vacunas.ElementAt(i - 1).fecha_vacunacion.AddMonths(1) < DateTime.Now.Date && Model.HojaVida.Vacunas.ElementAt(i - 1).fecha_vacunacion > DateTime.Now.Date.AddMonths(-20)))
                                                                 {
                                                                 
                                                             
                                                                       <th height="35px" style="color: red">@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).nombre_generico)</th>

                                                                 }
                                                                 else if (Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("Toxoide Tetánico Dosis 2") && (Model.HojaVida.Vacunas.ElementAt(i - 1).fecha_vacunacion.AddMonths(1) < DateTime.Now.Date && Model.HojaVida.Vacunas.ElementAt(i-1).fecha_vacunacion > DateTime.Now.Date.AddMonths(-20)))
                                                                 {
                                                                    <th height="35px" style="color: red">@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).nombre_generico)</th>


                                                                 }
                                                                 else if (Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("Toxoide Tetánico Dosis 3") && (Model.HojaVida.Vacunas.ElementAt(i - 1).fecha_vacunacion.AddMonths(6) < DateTime.Now.Date && Model.HojaVida.Vacunas.ElementAt(i - 1).fecha_vacunacion > DateTime.Now.Date.AddMonths(-20)))
                                                                 {
                                                                    <th height="35px" style="color: red">@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).nombre_generico)</th>


                                                                 }
                                                                 else if (Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("Toxoide Tetánico Dosis 4") && (Model.HojaVida.Vacunas.ElementAt(i - 1).fecha_vacunacion.AddMonths(12) < DateTime.Now.Date && Model.HojaVida.Vacunas.ElementAt(i - 1).fecha_vacunacion > DateTime.Now.Date.AddMonths(-20)))
                                                                 {
                                                                    <th height="35px" style="color: red">@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).nombre_generico)</th>


                                                                 }
                                                                 else if (Model.HojaVida.Vacunas.ElementAt(i).nombre_generico.Equals("Toxoide Tetánico Dosis 5") && (Model.HojaVida.Vacunas.ElementAt(i - 1).fecha_vacunacion.AddMonths(12) < DateTime.Now.Date && Model.HojaVida.Vacunas.ElementAt(i - 1).fecha_vacunacion > DateTime.Now.Date.AddMonths(-20)))
                                                                 {
                                                                    <th height="35px" style="color: red">@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).nombre_generico)</th>


                                                                 }
                                                                 else
                                                                 {

                                                                      <th height="35px">@Html.DisplayFor(m => Model.HojaVida.Vacunas.ElementAt(i).nombre_generico)</th>

                                                                 }

                                                             }

                                                         }






</tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>

                            </div>

                        </div><!-- /.row SAPAN7 -->





                </div>
            </div>
        </div>
    </div>







}
