    <div class="col-md-4 col-md-offset-4">
        <form class="form-horizontal" role="form">
            <fieldset>  
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.codigo, new { @class = "form-control" })
                        <span class="help-block">El criterio de búsqueda para los estudiantes es solo a través del código </span>
                    </div>
                    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Buscar" />
               

                
            </fieldset>
        </form>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->



    }
