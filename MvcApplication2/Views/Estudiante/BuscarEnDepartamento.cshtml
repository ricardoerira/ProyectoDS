    <fieldset>
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-md-offset-4" align="center">
                    <br />
                    <br />
                    <legend>Buscar Estudiante</legend>
                </div>
            </div>
        </div>
    </fieldset>



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)




    
