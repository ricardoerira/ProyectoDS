@model MvcApplication2.Models.Estudiante

@{
    ViewBag.Title = "CambioContraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";}


<fieldset>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4" align="center">
                <br />
                <br />
                <legend>Estudiante</legend>
            </div>
        </div>
    </div>
</fieldset>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    @Html.HiddenFor(model => model.estudianteId)


    <div class="container">
        <div class="col-sm-6 col-md-4 col-md-offset-4" align="center">
            <div class=" login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Cambiar Contraseña</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">

                                @Html.TextBoxFor(model => model.clave, new { @class = "form-control", @placeholder = "Username" })
                                @Html.ValidationMessageFor(model => model.clave)

                            </div>
                            

                            <!-- Change this to a button or input when using this as a form -->
                            <input type="submit" value="cambiar" class="btn btn-sm btn-success" />

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

                

                }
    


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
