@using (Html.BeginForm("SolicitarActualizacion", "Estudiante", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="row">
            <fieldset>
                <legend>Información Personal Estudiante</legend>

                <!-- /.navbar-collapse aca va leyend -->


                <div class="col-sm-3">
                    <img src="@Url.Content(Model.HojaVida.imagen_DI)" alt="..." class="img-rounded" height="200px" width="150px"><br />

                </div>

                <div class="col-sm-8">

                    <div class="row">

                        <!-- Text input-->

                        <fosrm class="form-horizontal" role="form">


                            <div class="form-group">
                                <label class="col-sm-2 control-label">Tipo Documento</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.tipo_documento, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.tipo_documento)

                                </div>

                                <label class="col-sm-2 control-label">Número</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.num_documento, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.primer_nombre)
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-sm-2 control-label">Código </label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.codigo, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.primer_apellido)
                                </div>

                                <label class="col-sm-2 control-label">Nombre</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.primer_nombre, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.primer_nombre)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Primer Apellido</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.primer_apellido, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.primer_apellido)
                                </div>

                                <label class="col-sm-2 control-label">Segundo Apellido</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.segundo_apellido, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.segundo_apellido)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Correo</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.correo, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.correo)
                                </div>

                                <label class="col-sm-2 control-label">Genero</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.genero, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.genero)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Fecha de Nacimiento</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.fecha_nacimiento, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.fecha_nacimiento)
                                </div>
                                <label class="col-sm-2 control-label">Edad</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.barrio_procedencia, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.barrio_procedencia)

                                </div>

                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Lugar Nacimiento</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.municipio_procedencia, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.municipio_procedencia)
                                </div>
                                <label class="col-sm-2 control-label">Dirección Procedencia</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.direccion_procedencia, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.direccion_procedencia)
                                </div>


                            </div>






                            <div class="form-group">
                                <label class="col-sm-2 control-label">Dirección Manizales</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.direccion_manizales, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.direccion_manizales)
                                </div>
                                <label class="col-sm-2 control-label">RH</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.hemoclasificacion, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.hemoclasificacion)
                                </div>

                            </div>



                            <div class="form-group">
                                <label class="col-sm-2 control-label">Teléfono Procedencia</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.num_telefono, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.num_telefono)
                                </div>
                                <label class="col-sm-2 control-label">Celular</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.num_celular, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.num_celular)
                                </div>
                            </div>




                            <div class="form-group">
                                <label class="col-sm-2 control-label">Estado Civil</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.estado_civil, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.estado_civil)



                                </div>
                                <label class="col-sm-2 control-label">Numero de Hijos</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.HojaVida.hijos, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.HojaVida.hijos)
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-sm-2 control-label">Estado </label>


                                @if (ViewBag.estado)
                            
                                {
                                <button type="submit" class="alert-info">Actualizada</button>

                                }
                           
                                else
                            
                           
                                {
                                <button type="submit" class="alert-danger">Solicitar Actualizacion</button>


                                }


                            </div>




                            <div class="form-group">




                                <div class="col-sm-4">

                                    @Html.HiddenFor(model => model.estudianteId)
                                    @Html.HiddenFor(model => model.hojaVidaId)
                                    @Html.HiddenFor(model => model.rotacionId)
                                    @Html.HiddenFor(model => model.programaId)
                                    @Html.HiddenFor(model => model.clave)
                                    @Html.HiddenFor(model => model.modalidad)


                                    @Html.HiddenFor(model => model.semestre)
                                    @Html.HiddenFor(model => model.estado_academico)


                                </div>
                            </div>





                    </div>

                </div><!-- /.row -->
            </fieldset>
        </div>
    </div>
}

