

@model MvcApplication2.Models.Estudiante

    <div class="row">
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Personales", "Personales/" + Model.estudianteId, "Estudiante")</li>
                        <li>@Html.ActionLink("Documentos", "SoportesCompletos/" + Model.estudianteId, "Estudiante")</li>
                        <li>@Html.ActionLink("Académicos", "Academicos/" + Model.estudianteId, "Estudiante")</li>
                        <li>@Html.ActionLink("Vacunación", "CarnetVacunacion/" + Model.estudianteId, "Estudiante")</li>
                        <li>@Html.ActionLink("Salud", "Salud/" + Model.estudianteId, "Estudiante")</li>
                        <li>@Html.ActionLink("Reporte", "ReporteEstudianteA/" + Model.estudianteId, "Estudiante", new { target = "_blank" })</li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </div>



    <div class="container">
        <div class="row">
            <fieldset>
                <legend>Información académica</legend>
                <div class="well">
                    <div class="container">
                        <div class="col-sm-3">
                            <img src="@Url.Content(Model.HojaVida.imagen_DI)" alt="..." class="img-rounded" height="200px" width="150px"><br />
   </div>

                        <div class="col-sm-8">

                            <div class="row">
                                <form class="form-horizontal" role="form">

                                    <!-- Text input-->

                                    <div class="form-group">

                                        <label class="col-sm-2 control-label">Programa</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(model => model.Programa.nombre, new { @class = "TextBoxAsLabelAcademicos" })
                                            
                                        </div>
                                        
                                    </div>


                                    <div class="form-group">

                                        <label class="col-sm-2 control-label">Modalidad</label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(model => model.modalidad, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>


                                                                                                           
                                    <div class="form-group">

                                        <label class="col-sm-2 control-label">Semestre</label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(model => model.semestre, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Estado</label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(model => model.estado_academico, new { @class = "form-control", @readonly = "readonly" })
                                        </div>

                                    </div>
                                    
                            </div>
                            </div>



                            </form>
                        </div><!-- /.row -->
                    </div>
            </fieldset>
         






            </div>
        </div>
