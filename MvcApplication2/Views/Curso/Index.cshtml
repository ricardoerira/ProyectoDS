<div class="ens">
    <p>
        @Html.ActionLink("Crear Nuevo", "Create")
    </p>
    </div>

    @using (Html.BeginForm())
    {

        <div class="ens">
            <p class=" help-block">
                <table></table>  Educación Continuada - Buscar por Nombre:
            </p>
        </div>

        <div class="col-md-4">
            @Html.TextBox("SearchString", ViewBag.SearchFilter as string, new { @class = "form-control", onclick = "keystroke()", id = "search" })

        </div>
        <div class="col-md-6">
            <input type="submit" class="btn btn-primary" value="Buscar" />
        </div>

    }

    <div class="span7">
        <div class="widget stacked widget-table action-table">

            <div class="widget-header">
                <h4><i class="glyphicon-align-center glyphicon glyphicon-list"></i></h4>
                <h3>Tabla Educación Continuada</h3>
            </div> <!-- /widget-header -->

            <div class="widget-content">

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Tipo</th>
                            <th>Nombre</th>
                            <th>Asignados</th>
                            <th>Inicio</th>
                            <th>Fin</th>
                            <th>IPS/ESE</th>

                            <th class="td-actions">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tipo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.asignados)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fechaInicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fechaFin)
                                </td>


                                <td>
                                    @Html.DisplayFor(modelItem => item.IPS_ESE.nombre)
                                </td>
                                <td class="td-actions">  

                                    <a href="javascript:;" class="btn btn-sm btn-default">
                                        <i class="btn-icon-only glyphicon glyphicon-ok"></i>
                                    </a>

                                    <a href="javascript:;" class="btn btn-sm btn-danger">
                                        <i class="btn-icon-only glyphicon glyphicon-remove"></i>
                                    </a>

                                    <a href="javascript:;" class="btn btn-sm btn-success">
                                        <i class="btn-icon-only glyphicon glyphicon-pencil"></i>
                                    </a>





                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

            </div> <!-- /widget-content -->

        </div> <!-- /widget -->
    </div>
