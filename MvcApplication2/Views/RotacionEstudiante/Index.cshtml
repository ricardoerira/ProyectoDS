@model IEnumerable<MvcApplication2.Models.RotacionEstudiante>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Inicio", "VistaDepartamentoSalud/", "DepartamentoSalud")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Hoja de Vida<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Estudiante", "BuscarEnDepartamento/", "Estudiante")</li>
                            <li>@Html.ActionLink("Docente", "BuscarEnDepartamento/", "Docente")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Listado estudiantes", "EstadoHVdepto/", "Estudiante")</li>
                            <li>@Html.ActionLink("Listado docentes", "EstadoHVdepto/", "Docente")</li>

                        </ul>
                    </li>
                    <li>@Html.ActionLink("Rotación", "SeleccionRotacion/", "Rotacion")</li>
                    <li>@Html.ActionLink("Carta Presentación", "SeleccionRotacionCarta/", "IPS_ESE")</li>

                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
</div>

<div class="ens">
    <p>
        @Html.ActionLink("Regresar", "../Rotacion/SeleccionRotacion")
    </p>
</div>

<div class="span7">
    <div class="widget stacked widget-table action-table">

        <div class="widget-header">
            <h4><i class="glyphicon-align-center glyphicon glyphicon-list"></i></h4>
            <h3>@ViewBag.nombre</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>

                        <th class="text-center">
                            Grupo
                        </th>
                        <th>
                            Horario
                        </th>
                        <th>
                            Fecha Inicio
                        </th>
                        <th>
                            Fecha Fin
                        </th>
                        <th>
                            Docente
                        </th>
                        <th>
                            Estudiante
                        </th>
                        <th>
                            IPS/ESE
                        </th>
                        <th class="td-actions text-center">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Rotacion.grupo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.horario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rotacion.fecha_inicio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rotacion.fecha_terminacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Docente.HojaVida.primer_nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estudiante.HojaVida.primer_nombre)
                                @Html.DisplayFor(modelItem => item.Estudiante.HojaVida.primer_apellido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IPS_ESE.nombre)
                            </td>

                            <td class="text-center">
                                @Html.ActionLink(" ", "Edit", new { id = item.rotacionEstudianteId }, new { @class = "btn btn-sm btn-success btn-icon-only glyphicon glyphicon-pencil" })


                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div> <!-- /widget-content -->

    </div> <!-- /widget -->
</div>