
@model MvcApplication2.Models.Docente

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    if (!string.IsNullOrEmpty(ViewBag.AlertMessage))
    {
        <script>alert("@ViewBag.AlertMessage");</script>

    }
<div class="container-fluid">
    
        <div class="container-page">
            <div class=" col-sm-2">
                </div>
                <div class=" col-sm-3">
                    <br />
                    <br />
                    <img src="../../images/user3.jpg" height="300" width="275">
                    
                </div>

                <div class="col-sm-4">
                    <br />
                    <br />
                    <br />

                    <h2><p class="help-block">Iniciar sesión</p></h2>
                    <br />
                    <p>
                        Como vas a acceder a información confidencial, es
                        necesario que confirmes tu contraseña.
                    </p>
                        <br />
                        <strong> @Html.DisplayFor(model => model.HojaVida.correo) </strong>
                        @Html.PasswordFor(model => model.clave, new { @class = "form-control", @placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(model => model.clave)

<p class="help-block"></p>


                    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                </div>
            </div>
   
</div>





    <div class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
            <p class="navbar-text pull-left">
                © 2015 - Facultad de Ciencias para la Salud.
                <a href="http://www.ucaldas.edu.co/portal/" target="_blank">Universidad de Caldas</a>



                <a class="inicio">@Html.ActionLink(" ", "Personales", new { id = @Model.docenteId }, new { @class = "btn btn-sm btn-success btn-icon-only glyphicon glyphicon-home" }) </a>

            </p>
        </div>


    </div>


    <div class="form-group">




        <div class="col-sm-4">

            @Html.HiddenFor(model => model.docenteId)
            @Html.HiddenFor(model => model.hojaVidaId)
           
            @Html.HiddenFor(model => model.clave)
            


        </div>
    </div>

}
