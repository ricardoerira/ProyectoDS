                </div>


                <legend>Información Académica</legend>

                <div class="col-sm-3">

                </div>


                <div class="col-sm-8">
                    <fodrm class="form-horizontal" role="form">

                        <div class="row">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Departamento</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.DepartamentoSalud.nombre, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.DepartamentoSalud.nombre)

                                </div>
                                <label class="col-sm-2 control-label">Tipo Vinculación</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.tipo_vinculacion, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.tipo_vinculacion)
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-sm-2 control-label">Título Pregrado</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.titulo_pregrado, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.titulo_pregrado)
                                </div>

                                <label class="col-sm-2 control-label">Dedicación</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.dedicacion, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.dedicacion)
                                </div>

                            </div>




                            <div class="form-group">

                                <label class="col-sm-2 control-label">Máximo nivel de formación</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.maximo_nivel_formacion, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.maximo_nivel_formacion)
                                </div>

                                <label class="col-sm-2 control-label">Categoria Escalafón Docente</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.categoria_escalafon_docente, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.maximo_nivel_formacion)
                                </div>
                            </div>

                            <div class="form-group">

                                <label class="col-sm-2 control-label">Título Postgrado</label>
                                <div class="col-sm-8">

                                    @Html.TextBoxFor(model => model.certificado_DPE, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.certificado_DPE)
                                </div>


                            </div>
                        </div>
                    </fodrm>
                    @if (ViewBag.estado)
                    {
                        <button type="submit" class="alert-info">Actualizada</button>

                    }

                    else
                    {
                        <button type="submit" class="alert-danger">Solicitar Actualizacion</button>


                    }

                </div><!-- /.row -->

            </fieldset>
        </div>
    </div>
  

}
