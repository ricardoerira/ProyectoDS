@{
    ViewBag.Title = "InformacionDocente";
}

@model MvcApplication2.Models.Docente

<div class="row">
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Docencia Servicio", "VistaODS", "Rotacion")</li>
                    <li>@Html.ActionLink("Personales", "InformacionDocenteVista/" + Model.docenteId, "Docente")</li>
