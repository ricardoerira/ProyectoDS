@model MvcApplication2.Models.Docente

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container-fluid">

        <div class="container-page">
            <div class=" col-sm-2">
            </div>
            <div class=" col-sm-3">
                <br />
                <br />
                <img src="../../images/user3.jpg" height="300" width="275">

            </div>

            <div class="col-sm-4">
                <br />
                <br />

                <h2><p class="help-block">Cambiar contraseña</p></h2>
                <br />
                <p>
                    Una contraseña segura contribuye a evitar el acceso no autorizado a la hoja de vida.
                </p>
                <br />
                <strong> @Html.DisplayFor(model => model.HojaVida.correo) </strong>
                @Html.PasswordFor(model => model.clave, new { @class = "form-control", @placeholder = "Nueva Contraseña" })
                @Html.ValidationMessageFor(model => model.clave)

                <p class="help-block">8 caracteres como mínimo, distingue mayúsculas de minúsculas</p>

                @Html.PasswordFor(model => model.tipo_documento, new { @class = "form-control", @placeholder = "Nueva Contraseña" })
                
                <p class="help-block">Vuelve a escribir la contraseña</p>

                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>

    </div>





    <div class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
            <p class="navbar-text pull-left">
                © 2015 - Facultad de Ciencias para la Salud.
                <a href="http://www.ucaldas.edu.co/portal/" target="_blank">Universidad de Caldas</a>
            </p>

            <a href="http://youtu.be/zJahlKPCL9g" class="navbar-btn  btn pull-right">
                <span></span>  Inicio
            </a>
        </div>


    </div>


    <div class="form-group">




        <div class="col-sm-4">

            @Html.HiddenFor(model => model.docenteId)
            @Html.HiddenFor(model => model.hojaVidaId)
            
            @Html.HiddenFor(model => model.clave)
            
        </div>
    </div>

}
